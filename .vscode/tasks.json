{
    "tasks": [
        {
          "label": "Run QEMU",
          "type": "shell",
          "command": "qemu-system-riscv32",
          "args": [
            "-machine", "spike",                  // Adjust for your RISC-V target machine
            "-nographic",
            "-kernel", "${workspaceRoot}/example/multi_thread/build/multi_thread.elf",
            "-gdb", "tcp::1234",
            "-S"                                     // Freeze CPU at startup (wait for GDB)
          ],
          "problemMatcher": [],
          "group": {
            "kind": "build",
            "isDefault": true
          }
        },

        {
            "type": "shell",
            "label": "reset",
            "command": "bash -c ; rm -rf ${workspaceFolder}/build ; mkdir build"
        },
        {
            "dependsOn":[
                "reset"
            ],
            "type": "shell",
            "label": "CMake build debug",
            "command": "bash",
            "args": [
                "-c",
                ";",
                "cd",
                "${workspaceFolder}/build",
                ";",
                "/usr/bin/cmake","-DCMAKE_BUILD_TYPE=Debug","..",
                ";",
                "/usr/bin/make"
            ],
            "options": {
            },
            "problemMatcher": [

            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "dependsOn":[
                "reset"
            ],
            "type": "shell",
            "label": "CMake build release",
            "command": "bash",
            "args": [
                "-c",
                ";",
                "cd",
                "${workspaceFolder}/build",
                ";",
                "/usr/bin/cmake",
                "..",
                ";",
                "/usr/bin/make"
            ],
            "options": {
            },
            "problemMatcher": [

            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}